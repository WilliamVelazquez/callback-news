{
    "presets": [
        "next/babel",
        "@babel/preset-env",
        "@babel/preset-typescript",
        "@babel/preset-react",
        [
            "env",
            {
                "targets": {
                    "node": 6
                }
            }
        ],
        "babelrcRoots": [".", "./packages/*"],
        "plugins": [
            "transform-runtime",
            [
                "@babel/plugin-proposal-class-properties"
            ],
            [
                "babel-plugin-styled-components",
                {
                    "displayName": true
                }
            ]
        ]
    }